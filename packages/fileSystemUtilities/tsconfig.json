{ 
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "dist",
        "build",
        "node_modules",
        "src/__scripts__",
        "tsup.config.ts"
    ],
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "noEmit": false,
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "target": "ES2021",
        "jsx": "react",
        "allowImportingTsExtensions": false,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true
    }
}

