{
    "extends": "./tsconfigBuildTypes.json",
    "exclude": [
        "node_modules",
        "dist",
        ".turbo",
        "src/**/*.test.ts",
        "jest**",
         "src/__scripts__/**",
         "../types/"
    ],
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "compilerOptions": {
        "noEmitOnError": false,
        "declaration": true,
        "declarationDir": "../types/src/generated/configschema",
        "emitDeclarationOnly": true,
        "moduleResolution": "Bundler",
        "skipLibCheck": true,
        "jsx": "react-jsx",
    }
}
