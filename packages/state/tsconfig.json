{
    "extends": "@ulld/typescript-config/nextjs.json",
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "dist",
        "build",
        "node_modules",
        "__scripts__"
    ],
    "compilerOptions": {
        "rootDir": ".",
        "moduleResolution": "Bundler",
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "strict": true,
        "resolveJsonModule": true
    }
}
