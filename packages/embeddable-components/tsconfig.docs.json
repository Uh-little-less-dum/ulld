{
    "$schema": "https://json.schemastore.org/tsconfig",
    // "extends": "@repo/typescript-config/docs.json",
    "compilerOptions": {
        "plugins": [
            {
                "name": "next"
            }
        ],
        "allowJs": true,
        "declaration": false,
        "declarationMap": false,
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "resolveJsonModule": true,
        "target": "ES2021",
        "types": [
            "jest",
            "node",
            "mdx",
            "mathjax",
            "@testing-library/jest-dom",
            "jest-environment-jsdom"
        ],
        "jsx": "react-jsx",
        "experimentalDecorators": true,
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "baseUrl": "./src",
        "noEmit": true,
        "forceConsistentCasingInFileNames": true,
        "strict": false,
        "noFallthroughCasesInSwitch": true,
        "skipLibCheck": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "isolatedModules": true,
        "inlineSources": false,
        "allowImportingTsExtensions": true,
        "esModuleInterop": true,
        "composite": false
    },
    "include": [
        "../embeddable-components/src/**/*.tsx",
        "../utilities/src/**/*.tsx",
        "../configschema/src/**/*.tsx",
        "../embeddable-components/src/**/*.ts",
        "../utilities/src/**/*.ts",
        "../configschema/src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "../**/node_modules",
        "../../node_modules",
        "dist",
        ".turbo",
        "src/**/*.test.ts",
        "coverage"
    ]
}
