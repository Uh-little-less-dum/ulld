{
    "extends": "@ulld/typescript-config/generateTypes.json",
    "exclude": [
        "node_modules",
        "dist",
        ".turbo",
        "src/**/*.test.ts",
        "jest**",
        "src/__scripts__/**"
    ],
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "compilerOptions": {
        "outDir": "./dist",
        "moduleResolution": "Bundler",
        "baseUrl": ".",
        "rootDir": "./src"
    }
}
