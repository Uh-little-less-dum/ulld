{
  "name": "@ulld/schemas",
  "version": "0.0.5",
  "type": "module",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "wireit",
    "dev": "next dev",
    "ensureProperDatabaseImports": "wireit",
    "genTypes": "wireit",
    "lint": "next lint",
    "setDatabaseTunnelExports": "wireit",
    "test": "echo 'Add test script here'"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "transpile",
        "genTypes"
      ]
    },
    "transpile": {
      "command": "tsup-node",
      "output": [
        "dist"
      ],
      "files": [
        "src/**"
      ],
      "dependencies": [
        "cleanBuild",
        "setDatabaseTunnelExports",
        "ensureProperDatabaseImports"
      ]
    },
    "cleanBuild": {
      "command": "trash ./dist"
    },
    "genTypes": {
      "command": "pnpm tsc --project ./tsConfigBuildTypes.json",
      "output": [
        "dist"
      ],
      "files": [
        "src/**"
      ],
      "clean": false
    },
    "setDatabaseTunnelExports": {
      "command": "tsx ./src/__scripts__/ensureFileExtensionExport.ts"
    },
    "ensureProperDatabaseImports": {
      "command": "tsx ./src/__scripts__/ensureDatabasePackageExport.ts && tsx ./src/__scripts__/ensureFileExtensionExport.ts"
    }
  },
  "exports": {
    "./types": "./dist/types/main.ts",
    "./frontMatter": "./dist/mdx/frontMatter/main.ts",
    "./mdx-parsing-params": "./dist/mdx/parsing/params/index.ts",
    "./classProps-mdxNote": "./dist/api/prismaMdxRelations/mdxNote/classProps.ts"
  },
  "dependencies": {
    "glob": "10.3.15",
    "zod": "3.23.8"
  },
  "devDependencies": {},
  "peerDependencies": {
    "@ulld/configschema": "workspace:*",
    "@ulld/database": "workspace:*",
    "@ulld/eslint-config": "workspace:*",
    "@ulld/types": "workspace:*",
    "@ulld/typescript-config": "workspace:*",
    "@ulld/utilities": "workspace:*",
    "next": "14.2.3",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "packageManager": "pnpm@9.0.4",
  "@ulld/api": "workspace:*"
}
