{
    "extends": "@ulld/typescript-config/nextjs.json",
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2021",
        "noEmit": false,
        "incremental": false,
        "jsx": "react",
        "isolatedModules": true,
        "allowImportingTsExtensions": false,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        // "noEmitOnError": false,
    },
    "exclude": [
        "dist",
        "build",
        "node_modules",
        "tsup.config.ts",
        "src/database"
    ],
    "include": [
        "src"
    ]
}
