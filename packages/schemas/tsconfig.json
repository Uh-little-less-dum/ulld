{
    "$schema": "/Users/bigsexy/dev-utils/jsonSchemas/src/schemas/json/tsconfig.json",
    "extends": "@ulld/typescript-config/nextjs.json",
    "exclude": [
        "dist",
        "build",
        "node_modules",
        "src/__scripts__",
        "tsup.config.ts",
        "src/database" // Will need to move the independent schemas used into a different directory. There are way too many build issues ot handle them all right now from the autogenerated schemas.
    ],
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "noEmit": false,
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "jsx": "react-jsx",
        "allowImportingTsExtensions": false,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src"
    ]
}
