{
    "$schema": "https://json.schemastore.org/tsconfig.json",
    "extends": "@ulld/typescript-config/nextjs.json",
    "include": [
        "./**/*.ts",
        "./**/*.tsx"
    ],
    "exclude": [
        "dist",
        "build",
        "node_modules",
        "react-app-env-d.ts"
    ],
    "compilerOptions": {
        "rootDir": "src",
        "moduleResolution": "Bundler",
        "outDir": "dist",
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "noEmit": false,
        "emitDeclarationOnly": true
    }
}
