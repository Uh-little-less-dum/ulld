{
    "$schema": "https://json.schemastore.org/tsconfig.json",
    "compilerOptions": {
        "declaration": true,
        "module": "Node16",
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "target": "es2022",
        "moduleResolution": "Bundler",
        "esModuleInterop": true,
        "types": ["mocha", "chai", "node"]
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ],
    "esModuleInterop": true,
    "ts-node": {
        "esm": true
    }
}
