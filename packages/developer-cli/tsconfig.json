{
  "compilerOptions": {
    "declaration": true,
    "module": "Node16",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "target": "es2022",
    "moduleResolution": "node16",
    "types": ["node", "mocha"],
    "esModuleInterop": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules/**", "../../node_modules/**", "dist", ".turbo"],
  "ts-node": {
    "esm": true
  }
}
