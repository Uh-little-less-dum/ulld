{
  "extends": "@repo/typescript-config/nextjs.json",
  "include": [
      "./*/**.ts", 
      "./*/**.tsx",
      "./modules.d.ts"
  ],
  "exclude": [
      "dist",
      "build", 
      "node_modules"
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "paths": {
      "#/*": ["./src/*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
