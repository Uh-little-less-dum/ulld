{
    "extends": "@repo/typescript-config/nextjs.json",
    "include": [
        "./src/*/**.ts", 
        "./src/*/**.tsx",
        "./modules.d.ts"
    ],
    "exclude": [
        "dist",
        "build",
        "node_modules"
    ],
    "compilerOptions": {
         "jsx": "react-jsx",
        "paths": {
            "#/*": [
                "./src/*"
            ]
        },
        "esModuleInterop": true,
        "resolveJsonModule": true
    }
}
