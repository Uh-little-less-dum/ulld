{
    "extends": "@repo/typescript-config/nextjs.json",
    "include": [
        "./*/**.ts",
        "./*/**.tsx",
        "./modules.d.ts"
    ],
    "exclude": [
        "dist",
        "build",
        "node_modules"
    ],
    "compilerOptions": {
        "outDir": "dist",
        "jsx": "react-jsx",
        "paths": {
            "#/*": [
                "./src/*"
            ]
        },
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "declarationMap": true,
        "noEmit": false
    }
}
