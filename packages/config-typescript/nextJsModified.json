{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js Modified",
  "extends": "./base.json",
  "exclude": ["node_modules", "dist", ".turbo", "src/**/*.test.ts"],
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "allowJs": true,
    "declaration": false,
    "declarationMap": false,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "noEmit": true,
    "resolveJsonModule": true,
    "target": "ES2020",
    "types": ["jest", "node", "mdx"]
  }
}
