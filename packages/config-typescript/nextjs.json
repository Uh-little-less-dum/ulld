{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js",
  "extends": "./base.json",
  "exclude": ["node_modules", "dist", ".turbo", "src/**/*.test.ts"],
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "allowJs": true,
    "declaration": false,
    "declarationMap": false,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "ESNEXT",
    "noEmit": true,
    "resolveJsonModule": true,
    "target": "ES2021"
  }
}
