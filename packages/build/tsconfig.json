{
    "$schema": "/Users/bigsexy/dev-utils/jsonSchemas/src/schemas/json/tsconfig.json",
    "extends": "@ulld/typescript-config/base.json",
    "compilerOptions": {
        "plugins": [
            {
                "name": "next"
            }
        ],
        "noEmitOnError": false,
        "declaration": true,
        "declarationMap": true,
        "allowJs": true,
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "noEmit": false,
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "Bundler",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowImportingTsExtensions": false,
        "jsx": "react",
        "lib": [
            "ESNext"
        ]
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ],
    "exclude": [
        "src/__test__/**"
    ],
    "ts-node": {
        "esm": true
    }
}
