{
  "private": true,
  "name": "ulld",
  "scripts": {
    "build": "turbo build",
    "clean": "turbo clean",
    "dev": "turbo dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "update-ulldBase": "git subtree push --prefix=apps/base/ ulldBase main",
    "publish-packages": "changeset version && changeset publish",
    "publish-packages-full": "turbo run build lint test && changeset version && changeset publish",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "postinstall": "echo 'manypkg check'",
    "forcePackgeMatch": "manypkg fix",
    "checkPackages": "manypkg check",
    "typedoc": "typedoc",
    "ci:publish": "pnpm publish -r --no-git-checks"
  },
  "dependencies": {
    "@changesets/cli": "2.27.5",
    "@manypkg/cli": "0.21.4",
    "deepmerge": "4.3.1",
    "framer-motion": "11.1.7",
    "glob": "10.3.15",
    "serialize-javascript": "^6.0.2",
    "tinycolor2": "1.6.0",
    "tsup": "8.0.1",
    "zod": "3.22.4",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@types/react": "~18.2.79",
    "@types/react-dom": "~18.2.25",
    "@svgr/rollup": "^8.1.0",
    "@types/mdx": "^2.0.13",
    "@types/npm-registry-fetch": "^8.0.7",
    "@types/tinycolor2": "^1.4.6",
    "autoprefixer": "^10.4.18",
    "dotenv-cli": "latest",
    "npm-registry-fetch": "^17.1.0",
    "postcss": "^8.4.35",
    "postcss-modules": "^6.0.0",
    "postcss-preset-env": "^9.5.0",
    "prettier": "^3.1.1",
    "sass": "^1.71.1",
    "string-hash": "^1.1.3",
    "ts-node": "^10.9.2",
    "turbo": "2.0.6-canary.0",
    "typescript": "^5.5.2",
    "typescript-plugin-css-modules": "^5.1.0",
    "zod-to-ts": "^1.2.0",
    "@ulld/utilities": "workspace:*"
  },
  "packageManager": "pnpm@9.4.0+sha256.b6fd0bfda555e7e584ad7e56b30c68b01d5a04f9ee93989f4b93ca8473c49c74",
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/*",
        "@eslint/*",
        "**eslint**"
      ],
      "allowAny": [
        "@babel/*",
        "eslint",
        "**eslint**"
      ]
    },
    "overrides": {
      "unified": "^11.0.5",
      "mapbox-gl": "^1.13.3",
      "typescript": "^5.5.2",
      "react": "18.2.0",
      "react-dom": "18.2.0",
      "@types/react": "~18.2.79",
      "@types/react-dom": "~18.2.25"
    }
  },
  "keywords": [
    "markdown",
    "note taking",
    "mdx",
    "math",
    "research",
    "academic",
    "STEM"
  ],
  "prisma": {
    "schema": "packages/database/prisma/schema.prisma"
  },
  "author": "Andrew Mueller <aiglinski414@gmail.com> (https://uhlittlelessdum.com)",
  "contributors": [
    "Andrew Mueller <aiglinski414@gmail.com> (https://uhlittlelessdum.com)"
  ],
  "funding": [
    {
      "type": "paypal",
      "url": "https://www.paypal.com/donate/?hosted_button_id=W22RTUJ2RPZDU"
    },
    {
      "type": "patreon",
      "url": "https://www.patreon.com/uhlittlelessdum/about"
    },
    {
      "type": "GitHub Sponsors",
      "url": "https://github.com/igloo1505/ulld"
    }
  ]
}
