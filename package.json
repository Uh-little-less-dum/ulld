  "prisma": {
    "schema": "packages/database/prisma/schema.prisma"
  },
  "packageManager": "pnpm@9.4.0+sha256.b6fd0bfda555e7e584ad7e56b30c68b01d5a04f9ee93989f4b93ca8473c49c74",
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/*",
        "@eslint/*",
        "**eslint**"
      ],
      "allowAny": [
        "@babel/*",
        "eslint",
        "**eslint**"
      ]
    },
    "overrides": {
      "unified": "^11.0.5",
      "mapbox-gl": "^1.13.3",
      "typescript": "^5.5.2",
      "react": "18.2.0",
      "react-dom": "18.2.0",
      "@types/react": "~18.2.79",
      "@types/react-dom": "~18.2.25"
    }
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): v${version}",
      "push": true,
      "commit": true,
      "tag": true,
      "requireCommits": false,
      "requireCleanWorkingDir": false
    },
    "github": {
      "release": true,
      "draft": true
    },
    "npm": {
      "publish": false,
      "ignoreVersion": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "react",
        "infile": "CHANGELOG.md",
        "header": "# Changelog"
      }
    },
    "hooks": {
      "before:init": "echo 'Add useful release hooks here.'",
      "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
    }
  },
  "commitlint": {
    "rules": {
      "header-max-length": [
        2,
        "always",
        130
      ]
    },
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dum-commit": {
    "type": {
      "height": 10,
      "opts": [
        "Fix",
        "Feat",
        "Docs",
        "Style",
        "Refactor",
        "Test",
        "Chore",
        "Revert",
        "WIP"
      ]
    },
    "scope": {
      "height": 10,
      "opts": [
        "Build",
        "Dev tools",
        "API",
        "Website",
        "Template App",
        "Config",
        "Package:Bib-Manager",
        "Package:Command Palette",
