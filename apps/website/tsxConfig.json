{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "paths": {
      "#/*": ["./src/*"],
      "mdx/*": ["./src/mdx/*"],
      "staticContent": ["./src/staticData/staticContent.json"]
    },
    "incremental": true,
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "module": "ESNext"
  },
  "include": ["next-env.d.ts", ".next/types/**/*.ts", "**/*.ts", "**/*.tsx"]
}
