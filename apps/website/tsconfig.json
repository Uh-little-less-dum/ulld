{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@ulld/typescript-config/nextjs.json",
    "compilerOptions": {
        "baseUrl": ".",
        "types": [
            "jest",
            "node",
            "react",
            "mdx",
            "mathjax"
        ],
        "paths": {
            "#/*": [
                "./src/*"
            ],
            "sources/*": [
                "./src/fumaDocs/sources/*"
            ],
            "contentlayer/generated": [ // Remove this from all places that it's being used. Leaving it for now to get the fumadocs content-collections package working.
                "./.contentlayer/generated"
            ],
            "content-collections": [
                "./.content-collections/generated"
            ],
            "mdx/*": [
                "./src/mdx/*"
            ],
            "staticContent": [
                "./src/staticData/staticContent.json"
            ],
            "docs": [
                "./src/fumaDocs/sources/main.ts"
            ]
        },
        "incremental": true,
        "resolveJsonModule": true
    },
    "include": [
        "next-env.d.ts",
        ".next/types/**/*.ts",
        "**/*.ts",
        "**/*.tsx"
    ],
    "ignore": [
        "**.mdx",
        "./layaway/**"
    ]
}
