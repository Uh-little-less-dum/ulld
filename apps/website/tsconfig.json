{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "types": ["jest", "node", "react", "mdx"],
    // "baseUrl": ".",
    "paths": {
      "#/*": [
        "./src/*"
      ],
      "contentlayer/generated": [
        "./.contentlayer/generated"
      ],
      "mdx/*": [
        "./src/mdx/*"
      ],
      "staticContent": [
        "./src/staticData/staticContent.json"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    ".contentlayer/generated"
  ]
}
